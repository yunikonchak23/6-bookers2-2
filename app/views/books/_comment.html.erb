  <table>
    <% @book.book_comments.each do |book_comment| %>
      <% book_comment_user = book_comment.user %>
      <tr>
        <td>
          <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
            <%= book_comment.user.name %>
          <% end %>
        </td>
        <td>
          <%= book_comment.comment %>
        </td>
          <% if book_comment.user == current_user %>
            <td>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-sm btn-danger" %>
            </td>
          <% end %>
      </tr>
    <% end %>
  </table>

  <%= form_with model:[@book, @book_comment], local: true do |f| %>
    <%= f.text_area :comment, size:"90×5",placeholder: "コメント入力" %></br>
    <%= f.submit "送信" %>
  <% end %>