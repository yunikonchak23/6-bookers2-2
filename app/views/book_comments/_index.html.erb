<table>
    <% book.book_comments.each do |book_comment| %>
      <% book_comment_user = book_comment.user %>
      <tr>
        <td>
          <%= link_to user_path(book_comment_user.id), class: "user_#{book_comment_user.id}" do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
            <%= book_comment.user.name %><br>
          <% end %>
        </td>
        <td>
          <%= book_comment.comment %>
        </td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true,class:"btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
